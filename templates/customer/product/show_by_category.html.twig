{% extends "base.html.twig" %}

{% block body %}

  <section>
  <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">{{ category.name }}</h3>
        </div>  

          <div class="col-12 d-flex">
                    <a href="{{ path('customer_category_index') }}" class="btn btn-secondary btn-lg btn-block">Retour aux cat√©gories</a>
                </div>

        {% for product in category.products %}

                      <div class="col-sm-12 col-lg-4 mt-3">
              
             <div class="card bg-dark text-white">
                    <img src="{{ product.imagePath }}" class="card-img" alt="image_category">
                  <div class="card-img-overlay">
                    
                    </div>
                </div>
                    <h5 class="card-title">{{ product.name }}</h5>
                        <a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-outline-dark btn-lg w-100">Consulter</a>
            </div>
              
            
        {% endfor %}

    </div>
     </div>
  </section>
   


{% endblock %}