{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
   <div class="container py-5">

    <div class="row">

    {% include "_messages_flash.html.twig" %}

        <div class="col-12 d-flex align-items-center justify-content-between">
            <h3>Liste des catégories</h3>
        </div>

        <hr>

   {% for category in categories %}
     
              <div class="col-sm-12 col-lg-4 mt-3">

                 <div class="card bg-dark text-white">
                      <img src="{{ category.imagePath }}" class="card-img" alt="image_category">
                      <div class="card-img-overlay">
                    
                      </div>
                  </div>
                <h5 class="card-title">{{ category.name }}</h5>
                          <a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="btn btn-outline-dark w-100">Consulter</a>
              </div>
              
          {% endfor %}
    


    </div>

  </div>
{% endblock %}


